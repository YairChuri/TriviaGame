<UserControl x:Class="Trivia.QuestionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid Name="_questionCoveredGrid" MouseDown="_questionControlGrid_MouseDown">

        </Grid>
        <Grid Name="_questionUncoveredGrid" MouseDown="_questionControlGrid_MouseDown" Visibility="Hidden">
            <StackPanel Orientation="Vertical">
                <TextBlock Name="_questionTextBlock" TextWrapping="Wrap" Margin="5" FontSize="14"/>
                <TextBlock Name="_answerATextBlock" TextWrapping="Wrap" Margin="2" FontSize="14"/>
                <TextBlock Name="_answerBTextBlock" TextWrapping="Wrap" Margin="2" FontSize="14"/>
                <TextBlock Name="_answerCTextBlock" TextWrapping="Wrap" Margin="2" FontSize="14"/>
                <TextBlock Name="_answerDTextBlock" TextWrapping="Wrap" Margin="2" FontSize="14"/>
            </StackPanel>

        </Grid>

    </Grid>
</UserControl>
